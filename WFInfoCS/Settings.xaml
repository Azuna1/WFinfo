<Window x:Class="WFInfoCS.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WFInfoCS"
        mc:Ignorable="d"
        Title="Settings" Height="255" Width="334" BorderBrush="#FF707070" WindowStyle="None" ResizeMode="NoResize">
    <Grid Background="#FF1B1B1B" MouseDown="MouseDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="334"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="26"/>
            <RowDefinition Height="58"/>
            <RowDefinition Height="37"/>
            <RowDefinition Height="105"/>
            <RowDefinition Height="67"/>
        </Grid.RowDefinitions>

        <Rectangle x:Name="Main_window" HorizontalAlignment="Left" Height="255" Grid.RowSpan="5" Stroke="#FF646464" VerticalAlignment="Top" Width="334"/>

        <Rectangle x:Name="Main_bar" Fill="#FF0F0F0F" HorizontalAlignment="Left" Height="27" Stroke="#FF646464" VerticalAlignment="Top" Width="334" Grid.RowSpan="2"/>

        <Image HorizontalAlignment="Left" Height="26" VerticalAlignment="Center" Width="26" RenderTransformOrigin="-1.263,-0.625" Margin="2,0,0,0" Source="Resources/WFLogo.png" >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform Y="0.25"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <TextBlock HorizontalAlignment="Left" Margin="28,2,0,0" TextWrapping="Wrap" Text="Settings" VerticalAlignment="Center" FontFamily="/WFInfoCS;component/Resources/#Roboto Condensed" Foreground="#FFB1D0D9" FontSize="20" Width="277" Height="24"/>
        <Button x:Name="exit" Content="x" HorizontalAlignment="Center" Margin="304,0,0,0" Width="30" Click="Exit" Foreground="#FFB1D0D9" Background="{x:Null}" FontSize="16" RenderTransformOrigin="0.5,1" BorderThickness="1" SnapsToDevicePixels="True" FontWeight="Bold" BorderBrush="#FF646464" FontFamily="/WFInfoCS;component/Resources/#Roboto Condensed"/>
        <Grid x:Name="Display_setting" HorizontalAlignment="Left" Height="59" VerticalAlignment="Top" Width="334" Grid.Row="1" Grid.RowSpan="2">
            <Rectangle x:Name="First_window" Stroke="#FF646464" Margin="0"/>
            <RadioButton Content="Window" HorizontalAlignment="Left" Margin="50,37,0,0" VerticalAlignment="Top" Checked="Window_checked" Background="#FFB1D0D9" BorderBrush="#FF0F0F0F" Foreground="#FFB1D0D9" FontSize="16" Height="17" Width="80" Padding="1,-5,0,0"/>
            <RadioButton Content="Overlay" IsChecked="True" HorizontalAlignment="Right" Margin="0,37,50,0" VerticalAlignment="Top" Checked="Overlay_checked" Background="#FFB1D0D9" BorderBrush="#FF0F0F0F" Foreground="#FFB1D0D9" FontSize="16" Height="17" Width="73" Padding="1,-5,0,0"/>
            <Label Content="Rewards display" Foreground="#FFB1D0D9" VerticalAlignment="Top" FontSize="16" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Width="334" Height="31"/>
        </Grid>
        <Grid x:Name="Activation_key" HorizontalAlignment="Left" Height="38" VerticalAlignment="Top" Width="334" Grid.Row="2" Grid.RowSpan="2">
            <Rectangle x:Name="First_window2" Stroke="#FF646464" Height="38" VerticalAlignment="Top"/>
            <Label Content="Activation key" Margin="24,2,0,4" Foreground="#FFB1D0D9" FontSize="16" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Width="112"/>
            <TextBox x:Name="Activation_key_box" Margin="190,5,24,5" TextWrapping="Wrap" Text="TextBox" FontSize="16" Background="#FF0F0F0F" BorderBrush="#FFB1D0D9" Foreground="#FFB1D0D9" Height="28" VerticalContentAlignment="Center" RenderTransformOrigin="0.5,0.451" HorizontalContentAlignment="Center" Padding="0,0,0,2.5" TextChanged="TextBox_TextChanged"/>
        </Grid>
        <Grid x:Name="Scalling_setting" HorizontalAlignment="Left" Height="106" VerticalAlignment="Top" Width="334" Grid.Row="3" Margin="0" Grid.RowSpan="2">
            <Rectangle x:Name="First_window1" Stroke="#FF646464" Margin="0"/>
            <TextBox x:Name="Scaling_box" Margin="190,4,24,72" TextWrapping="Wrap" Text="TextBox" FontSize="16" Background="#FF0F0F0F" BorderBrush="#FFB1D0D9" Foreground="#FFB1D0D9" Height="28" VerticalContentAlignment="Center" RenderTransformOrigin="0.5,0.451" HorizontalContentAlignment="Center" Padding="0,0,0,2.5" TextChanged="TextBox_TextChanged"/>
            <Label Content="Warframe UI scaling" Margin="0,1,0,0" Foreground="#FFB1D0D9" VerticalAlignment="Top" FontSize="16" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Width="175" Height="31"/>

            <Slider Margin="42,42,43,0" VerticalAlignment="Top" Value="100" Minimum="50" Maximum="100" TickPlacement="BottomRight" IsSnapToTickEnabled="True" TickFrequency="10" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFB1D0D9" ValueChanged="Slider_ValueChanged" HorizontalContentAlignment="Center" Height="22" Width="250"/>
            <Label Content="Full" HorizontalAlignment="Left" Margin="268,68,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,0.577" FontSize="16" Foreground="#FFB1D0D9" Width="37" HorizontalContentAlignment="Center"/>
            <Label Content="90" HorizontalAlignment="Left" Margin="225,68,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,0.577" FontSize="16" Foreground="#FFB1D0D9" HorizontalContentAlignment="Center"/>
            <Label Content="80" HorizontalAlignment="Left" Margin="177,68,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,0.577" FontSize="16" Foreground="#FFB1D0D9" HorizontalContentAlignment="Center"/>
            <Label Content="70" HorizontalAlignment="Left" Margin="129,68,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,0.577" FontSize="16" Foreground="#FFB1D0D9" HorizontalContentAlignment="Center" Width="28"/>
            <Label Content="60" HorizontalAlignment="Left" Margin="82,68,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,0.577" FontSize="16" Foreground="#FFB1D0D9" HorizontalContentAlignment="Center"/>
            <Label Content="50" HorizontalAlignment="Left" Margin="34,68,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,0.577" FontSize="16" Foreground="#FFB1D0D9" HorizontalContentAlignment="Center"/>
        </Grid>
        <Grid x:Name="Extra_settings" HorizontalAlignment="Left" Height="29" VerticalAlignment="Top" Width="334" Grid.Row="4">
            <CheckBox Content="Debug" HorizontalAlignment="Left" Margin="50,6,0,0" VerticalAlignment="Top" FontSize="16" Padding="4,-4,0,0" Background="#FFB1D0D9" BorderBrush="#FF0F0F0F" Foreground="#FFB1D0D9" Click="Debug_Clicked"/>
            <CheckBox Content="Auto" Margin="0,7,50,0" VerticalAlignment="Top" FontSize="16" Padding="4,-4,0,0" Background="#FFB1D0D9" BorderBrush="#FF0F0F0F" Foreground="#FFB1D0D9" Click="Auto_Clicked" HorizontalAlignment="Right"/>
        </Grid>

    </Grid>
</Window>
